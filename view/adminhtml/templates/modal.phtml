<?php
/**
 * @var \Fiserv\Checkout\Block\Adminhtml\Order\View\ModalContent $block
 */
$orderData = $block->getOrderData();

function writeRow($block, $description, $field)
{
    $orderData = $block->getOrderData();

    if (is_array($orderData) && array_key_exists($field, $orderData)) {
        ?>
        <tr>
            <th><?= $block->escapeHtml(__($description)) ?></th>
            <td><?= $block->escapeHtml($orderData[$field]) ?></td>
        </tr>
        <?php
    }
}
?>

<div id="fiserv-checkout-modal" style="display:none;">
    <div class="fiserv-checkout-content">
