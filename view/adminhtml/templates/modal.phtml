                            <td><?= $block->escapeHtml($orderData['transactionStatus']) ?></td>
                        </tr>
                    <?php } ?>
                </tbody>
            </table>
            <?php if (empty($orderData['orderId'])) { ?>
                <div class="message message-error"><?= $block->escapeHtml(__('Order information not available.')) ?></div>
            <?php } ?>
        <?php } ?>
    </div>
</div>

<script>
    require([
        'jquery',
        'Magento_Ui/js/modal/modal'
    ], function ($, modal) {
        'use strict';

        // Initialize modal
        var options = {
            type: 'popup',
            responsive: true,
            innerScroll: true,
            title: $.mage.__('Fiserv Checkout Information'),
            buttons: [{
                text: $.mage.__('Close'),
                class: 'action-primary',
                click: function () {
                    this.closeModal();
                }
            }]
        };

        var popup = modal(options, $('#fiserv-checkout-modal'));

        // Define global function to open modal
        window.showFiservCheckoutModal = function () {
            $('#fiserv-checkout-modal').modal('openModal');
        };
    });
