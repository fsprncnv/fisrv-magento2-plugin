            <table class="admin__table-secondary">
                <tbody>
                    <tr>
                        <th><?= $block->escapeHtml(__('Order #')) ?></th>
                        <td><?= $block->escapeHtml($orderData['increment_id']) ?></td>
                    </tr>
                    <tr>
                        <th><?= $block->escapeHtml(__('Customer Name')) ?></th>
                        <td><?= $block->escapeHtml($orderData['customer_name']) ?></td>
                    </tr>
                    <tr>
                        <th><?= $block->escapeHtml(__('Status')) ?></th>
                        <td><?= $block->escapeHtml($orderData['status']) ?></td>
                    </tr>
                    <tr>
                        <th><?= $block->escapeHtml(__('Payment Method')) ?></th>
                        <td><?= $block->escapeHtml($orderData['payment_method']) ?></td>
                    </tr>
                    <tr>
                        <th><?= $block->escapeHtml(__('Created At')) ?></th>
                        <td><?= $block->escapeHtml($orderData['created_at']) ?></td>
                    </tr>
                    <?php if (!empty($orderData['orderId'])) { ?>
                        <tr>
                            <th><?= $block->escapeHtml(__('Fiserv Order ID')) ?></th>
