{
  "name": "fiserv-ipg/checkout",
  "description": "Official Fisrv Payment Gateway for Magento",
  "type": "magento2-module",
  "version": "1.0.0",
  "license": [
    "OSL-3.0",
    "AFL-3.0"
  ],
  "require": {
    "fisrv/php-client": "dev-main",
    "php": "^8.1.0"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://gitlab.mherrm.de/api/v4/group/80/-/packages/composer/packages.json"
    }
  ],
  "autoload": {
    "files": [
      "registration.php"
    ],
    "psr-4": {
      "Fiserv\\Checkout\\": ""
    }
  },
  "archive": {
    "exclude": [
      ".gitlab-ci.yml",
      ".gitignore",
      "/*.*",
      "/.*",
      "!/*.php",
      ".idea",
      "tests",
      "docker"
    ]
  },
  "scripts": {
    "build": [
      "@composer --no-plugins --no-interaction archive"
    ],
    "format": [],
    "format-fix": [
      "../../../../vendor/bin/php-cs-fixer fix"
    ],
    "analyse": [
      "vendor/bin/phpstan analyse ."
    ]
  },
  "scripts-descriptions": {
    "build": "Build project artifact."
  },
  "require-dev": {
    "phpstan/phpstan": "^1.11",
    "magento-ecg/coding-standard": "^4.5"
  },
  "config": {
    "allow-plugins": true
  }
}
