{
  "name": "fisrv/payment",
  "description": "Official Fisrv Payment Gateway for Magento",
  "type": "magento2-module",
  "version": "1.0.0",
  "license": [
    "OSL-3.0",
    "AFL-3.0"
  ],
  "require": {
    "php": "^8.1",
    "fisrv/php-client": "^0.0.2"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://gitlab.mherrm.de/api/v4/group/80/-/packages/composer/packages.json"
    }
  ],
  "autoload": {
    "files": [
      "registration.php"
    ],
    "psr-4": {
      "Fisrv\\Payment\\": ""
    }
  },
  "archive": {
    "exclude": [
      ".gitlab-ci.yml",
      ".gitignore",
      "/*.*",
      "/.*",
      "!/*.php",
      ".idea",
      "tests",
      "docker"
    ]
  },
  "scripts": {
    "build": [
      "@composer --no-plugins --no-interaction install --no-scripts --no-dev",
      "@composer --no-plugins --no-interaction archive"
    ],
    "format": [
      "vendor/bin/php-cs-fixer fix --dry-run --diff"
    ]
  },
  "scripts-descriptions": {
    "build": "Build project artifact."
  }
}
