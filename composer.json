{
	"name": "extension/fisrv-magento-plugin",
	"description": "Magento plugin integration with Fiserv",
	"version": "1.0.0",
	"minimum-stability": "dev",
	"license": "MIT",
	"require": {
		"fisrv/php-client": "*"
	},
	"require-dev": {
		"phpunit/phpunit": "*",
		"friendsofphp/php-cs-fixer": "*"
	},
	"repositories": {
		"80": {
			"type": "composer",
			"url": "https://gitlab.mherrm.de/api/v4/group/80/-/packages/composer/packages.json"
		}
	},
	"archive": {
		"exclude": [ ".gitlab-ci.yml", ".gitignore", "/*.*", "/.*", "!/*.php", ".idea", "tests", "docker"]
	},
	"scripts": {
		"build": [
				"@composer --no-plugins --no-interaction install --no-scripts --no-dev",
				"@composer --no-plugins --no-interaction archive"
			],
		"format": [
      		"vendor/bin/php-cs-fixer fix --dry-run --diff"
		]
	},
	"scripts-descriptions": {
		"build": "Build project artifact."
	}
}
