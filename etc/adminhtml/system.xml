<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Config:etc/system_file.xsd">
	<system>
		<section id="payment">
			<group id="fisrv" translate="label" type="text" sortOrder="101" showInDefault="1" showInWebsite="1" showInStore="1">
				<label>Fisrv Checkout</label>
				<group id="branding" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Branding</label>
					<frontend_model>Fisrv\Payment\Block\Adminhtml\Render\Header</frontend_model>
				</group>
				<group id="fisrv_general" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>General</label>
					<field id="enabled" translate="label" type="select" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
						<label>Enabled</label>
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
						<config_path>payment/fisrv_general/enabled</config_path>
					</field>
					<field id="heading_api" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
						<label>API Details</label>
						<frontend_model>Fisrv\Payment\Block\Adminhtml\Render\Heading</frontend_model>
						<comment><![CDATA[Fill in your API Key below.]]></comment>
					</field>
					<field id="apikey" translate="label" type="text" sortOrder="13" showInDefault="1" showInWebsite="1" showInStore="1">
						<label>API Key</label>
						<backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
						<config_path>payment/fisrv_general/apikey</config_path>
					</field>
				</group>
				<include path="Fisrv_Payment::methods.xml"/>
			</group>
		</section>
	</system>
</config>